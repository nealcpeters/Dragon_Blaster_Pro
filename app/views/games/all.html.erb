<h1>Game Listing:</h1>

<p class="basic-button centered-block"><%= link_to "start a new game", new_game_path %></p>
<hr />
<p>Current Games:</p>
 <% @games.each do |game| %>
    <p>Game ID: <%= game.id%> Hero: <%= game.hero.name %></p>
    <p>Title: <%= game.map.title%></p>
    <p>Map Description: <%= game.map.description%></p>
    <p>Current Room: <%= game.room.title %></p>
    <%= form_tag("/games/launch", method: "post") do %>
      <%= hidden_field_tag :game_id, game.id %>

      <%= submit_tag("Continue Game") %>
    <% end %>
 <% end %>
